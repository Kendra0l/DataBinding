<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DataBinding.XamlElement.MainPage">

    <Grid
        RowDefinitions="Auto,*"
        Padding="24"
        RowSpacing="8">

        <Grid
            Grid.Row="0"
            Grid.Column="0"
            ColumnDefinitions="Auto,*"
            ColumnSpacing="8">

            <Label
                Grid.Row="0"
                Grid.Column="0"
                Text="Escribe lo que sea"/>
            <Entry
                Grid.Row="0"
                Grid.Column="1"
                BackgroundColor="LightGray"
               
                x:Name="TextEntry"/>

          

        </Grid>

        <VerticalStackLayout
            Grid.Row="1"
            Grid.Column="0">
            <Label
            Text="Esto es lo que escribiste:"/>
            <Label
            Text="{Binding Source={x:Reference TextEntry},Path=Text}"
            HorizontalOptions="Center"
            FontSize="Medium"
            FontAttributes="Italic"/>
            
        </VerticalStackLayout>

    </Grid>

    

</ContentPage>
