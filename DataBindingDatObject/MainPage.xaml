<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DataBindingDatObject.MainPage">

    <Grid
    Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <VerticalStackLayout
            Grid.Row="0"
            Grid.Column="0">

            <Label
                Text="Conteo:"
                FontSize="Medium"
                FontAttributes="Bold"/>
            <Border
                Margin="0,24,0,36"
                Stroke="White">
            <Label
                Text="{Binding Path=Conteo}"
                HorizontalOptions="Center"
                Margin="0,24"
                FontSize="50"
                FontAttributes="Italic"
                TextColor="Black"/>
            </Border>
        </VerticalStackLayout>

        <HorizontalStackLayout
             Grid.Row="1"
             Grid.Column="0"
             HorizontalOptions="Center"
             Spacing="32">

        <Button
             Text="Contar"
             FontSize="Medium"
             WidthRequest="130"
             Clicked="OnContarButtonClicked"
             Background="White"
             TextColor="Black"/>

        <Button
             Text="Reiniciar"
             FontSize="Medium"
             WidthRequest="130"
             Clicked="OnReiniciarButtonClicked"
             Background="White"
             TextColor="Black"/>

        </HorizontalStackLayout>


    </Grid>

</ContentPage>
